{
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name": "olympicgames.fullaccess"
      }
    ],
    "ApiResources": [
      {
        "Name": "Olympicgames",
        "Scopes": [
          "olympicgames.fullaccess"
        ]
      }
    ],
    "Clients": [
      {
        "ClientId": "postman",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RedirectUris": [
          "urn:ietf:wg:oauth:2.0:oob"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "olympicgames.fullaccess",
          "IdentityServerApi"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityServiceIdentityDbContextConnection": "Server=(localdb)\\mssqllocaldb;Database=IdentityService;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}